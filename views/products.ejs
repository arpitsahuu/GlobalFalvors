        background-color: #efeef4;
      }

      .type-con {
        height: 30%;
        width: 100%;
        margin-bottom: 30px;
      }

      .type-con h2 {
        color: #1d2820;
        padding-top: 20px;
        text-align: center;
        font-size: 35px;
      }
      .card-con {
        margin-top: 10px;
        /* height: 80%;
            width: 100%; */
        height: 500px;
        width: 100%;

        /* display: flex;
            align-items: center;
            flex-wrap: nowrap;
            background-color: #19335A; */
        padding-left: 2vmax;

        white-space: nowrap;
        overflow-x: auto;
      }

      .card-con::-webkit-scrollbar {
        display: none;
      }
      .card {
        margin: 0 20px;
        position: relative;
        /* height: 95%;
            width: 15%; */
        width: 220px;
        height: 350px;
        border-radius: 20px;
        /* background-color: #19335A; */
        /* background-color: #BDB4FF; */
        background-color: #343434;
        color: #fff;
        text-align: center;
        border: none;
        display: inline-block;
        /* display: flex;
            justify-content: center; */
        /* flex-direction: column; */
      }
      .card h3 {
        font-size: 22px;
      }
      .img-con {
        height: 45%;
        width: 100%;
        /* position: absolute; */
        /* top: 0%;
            left: 0; */
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;

        /* background-color: #000; */
      }
      .img-con img {
        height: 100%;
        object-fit: cover;
      }
      /* .demo{
            height: 43%;
            width: 100%;  
        } */
      .rate {
        padding: 0 10px;
        height: 20%;
        width: 100%;
        /* background-color: #000; */
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .rate h2 {
        color: #fff;
      }
      .rate button {
        height: 85%;
        width: 30%;
        border-radius: 50%;
        background-color: transparent;
        border: 2px solid #fff;
        font-size: 25px;
        color: #fff;
      }

      .rate button p {
        display: none;
      }

      #one {
        /* background-color: #54392D; */
        /* background-color: #FFB985; */
      }
    </style>
  </head>
